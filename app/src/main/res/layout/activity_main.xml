<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.newsscrollviewintent.MainActivity">

    <Button
        android:id="@+id/button_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="showFirstNews"
        android:text="@string/first_news"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_large"/>

    <Button
        android:id="@+id/button_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="showSecondNews"
        android:text="@string/second_news"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_large"/>

    <Button
        android:id="@+id/button_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:onClick="showThirdNews"
        android:text="@string/third_news"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_large"/>
    
</LinearLayout>
